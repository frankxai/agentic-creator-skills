{
  "mcpServers": {
    "~~knowledge base": {
      "comment": "Replace with your knowledge base MCP. Example: Notion",
      "command": "npx",
      "args": ["-y", "@notionhq/notion-mcp-server"],
      "env": {
        "OPENAPI_MCP_HEADERS": "{\"Authorization\": \"Bearer YOUR_NOTION_TOKEN\"}"
      }
    },
    "~~email marketing": {
      "comment": "Replace with your email platform MCP. Example: Resend",
      "command": "npx",
      "args": ["-y", "resend-mcp"],
      "env": {
        "RESEND_API_KEY": "YOUR_RESEND_API_KEY"
      }
    },
    "~~chat": {
      "comment": "Replace with your chat MCP. Example: Slack",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "YOUR_SLACK_BOT_TOKEN",
        "SLACK_TEAM_ID": "YOUR_SLACK_TEAM_ID"
      }
    }
  }
}
